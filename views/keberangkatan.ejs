<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Data Keberangkatan - Bus Terminal</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Include the sidebar partial -->
  <%- include('partials/sidebar', { active: 'keberangkatan', user: user }) %>

  <!-- Main Content -->
  <div class="content">
    <div class="container mt-4">
      <h1 class="mb-3">Data Keberangkatan</h1>
      <div class="card">
        <div class="card-header">
          Nama Terminal: <%= user.role !== 'admin' ? userTerminalName : "Semua" %>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="datatable" class="display table table-striped">
              <thead>
                <tr>
                  <% if(user.role === 'admin') { %>
                    <th>Nama Terminal</th>
                  <% } %>
                  <th>Tanggal</th>
                  <th>Jam</th>
                  <th>Nama PO</th>
                  <th>Nomor Polisi</th>
                  <th>Asal</th>
                  <th>Tujuan</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(function(record) { %>
                  <tr>
                    <% if(user.role === 'admin') { %>
                      <td><%= record.nama_terminal || '-' %></td>
                    <% } %>
                    <td><%= record.tanggal %></td>
                    <td><%= record.jam %></td>
                    <td><%= record.nama_PO || '-' %></td>
                    <td><%= record.nomor_polisi %></td>
                    <td><%= record.asal || '-' %></td>
                    <td><%= record.tujuan || '-' %></td>
                    <td>
                      <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-info show-btn" data-picture="<%= record.picture_path %>" title="Show">
                          <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-warning" title="Edit">
                          <i class="fas fa-edit"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for Show Button -->
  <div class="modal fade" id="showModal" tabindex="-1" aria-labelledby="showModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="showModalLabel">Hasil Tangkapan Kamera</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <img id="showImage" src="" alt="Captured Image" class="img-fluid">
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery and DataTables JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#datatable').DataTable({
        responsive: true,
        autoWidth: false,
        language: {
          search: "Cari:",
          lengthMenu: "Tampilkan _MENU_ entri",
          info: "Menampilkan _START_ sampai _END_ dari _TOTAL_ entri",
          infoEmpty: "Tidak ada data",
          paginate: {
            first: "Pertama",
            last: "Terakhir",
            next: "Berikutnya",
            previous: "Sebelumnya"
          }
        }
      });
    });
    
    // Show modal when "Show" button is clicked.
    $(document).on('click', '.show-btn', function () {
      var picture = $(this).data('picture');
      $('#showImage').attr('src', '/uploads/' + picture);
      var showModal = new bootstrap.Modal(document.getElementById('showModal'));
      showModal.show();
    });
  </script>
</body>
</html>
