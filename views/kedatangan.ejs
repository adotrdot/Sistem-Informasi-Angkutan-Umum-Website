<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Data Kedatangan - Bus Terminal</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-brand">
      <h2>Bus Terminal</h2>
    </div>
    <ul class="nav flex-column mt-4">
      <li class="nav-item mb-2">
        <a class="nav-link" href="/home">
          <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link active" href="/kedatangan">
          <i class="fas fa-sign-in-alt"></i> Data Kedatangan
        </a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link" href="/keberangkatan">
          <i class="fas fa-sign-out-alt"></i> Data Keberangkatan
        </a>
      </li>
      <% if (user.role === 'admin') { %>
      <li class="nav-item mb-2">
        <a class="nav-link" href="/admin">
          <i class="fas fa-user-cog"></i> Admin
        </a>
      </li>
      <% } %>
      <li class="nav-item mt-4">
        <a class="nav-link text-danger" href="/logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="content">
    <div class="container mt-4">
      <h1>Data Kedatangan</h1>
      <!-- Subtitle showing Terminal name for non-admin users -->
      <% if (user.role !== 'admin') { %>
        <h5>Nama Terminal: <%= userTerminalName %></h5>
      <% } else { %>
        <h5>Nama Terminal: All</h5>
      <% } %>
      <table class="table table-bordered table-striped mt-3">
        <thead>
          <tr>
            <th>Tanggal</th>
            <th>Jam</th>
            <th>Nama PO</th>
            <th>Nomor Polisi</th>
            <th>Asal</th>
            <th>Tujuan</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(record) { %>
            <tr>
              <td><%= record.tanggal %></td>
              <td><%= record.jam %></td>
              <td><%= record.nama_PO %></td>
              <td><%= record.nomor_polisi %></td>
              <td><%= record.asal %></td>
              <td><%= record.tujuan %></td>
              <td>
                <button class="btn btn-link"><i class="fas fa-eye"></i></button>
                <button class="btn btn-link"><i class="fas fa-edit"></i></button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
