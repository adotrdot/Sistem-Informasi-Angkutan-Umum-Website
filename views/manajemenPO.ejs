<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Manajemen PO - Bus Terminal</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Include Sidebar Partial with active set to 'manajemen-po' -->
  <%- include('partials/sidebar', { active: 'manajemen-po', user: user }) %>
  
  <!-- Main Content -->
  <div class="content">
    <div class="container mt-4">
      <h1 class="mb-4">Manajemen PO</h1>
      
      <!-- Card: Form to Add New PO -->
      <div class="card mb-4">
        <div class="card-header">
          Tambah PO Baru
        </div>
        <div class="card-body">
          <form action="/manajemen-po/create" method="POST">
            <div class="mb-3">
              <label for="namaPO" class="form-label">Nama PO</label>
              <input type="text" class="form-control" id="namaPO" name="namaPO" placeholder="Masukkan nama PO" required>
            </div>
            <button type="submit" class="btn btn-primary">Simpan PO</button>
          </form>
        </div>
      </div>
      
      <!-- Card: PO List -->
      <div class="card">
        <div class="card-header">
          Daftar PO
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="poTable" class="display table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nama PO</th>
                </tr>
              </thead>
              <tbody>
                <% poList.forEach(function(po) { %>
                  <tr>
                    <td><%= po.id %></td>
                    <td><%= po.nama_PO %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- jQuery, DataTables, and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function(){
      // Initialize DataTable for the PO list table, ordered by ID (column index 0) ascending.
      $('#poTable').DataTable({
        responsive: true,
        autoWidth: false,
        order: [[0, 'asc']],
        language: {
          search: "Cari:",
          lengthMenu: "Tampilkan _MENU_ entri",
          info: "Menampilkan _START_ sampai _END_ dari _TOTAL_ entri",
          infoEmpty: "Tidak ada data",
          paginate: {
            first: "Pertama",
            last: "Terakhir",
            next: "Berikutnya",
            previous: "Sebelumnya"
          }
        }
      });
    });
  </script>  
</body>
</html>
