<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Panel Manajemen User - Bus Terminal</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Include Sidebar Partial with active set to 'user-management' -->
  <%- include('partials/sidebar', { active: 'user-management', user: user }) %>

  <!-- Main Content -->
  <div class="content">
    <div class="container mt-4">
      <h1>Panel Manajemen User</h1>
      
      <!-- Card: Buat User Baru -->
      <div class="card mb-4">
        <div class="card-header">
          Buat User Baru
        </div>
        <div class="card-body">
          <form action="/user-management/create-user" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="text" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="admin">Admin</option>
                <option value="user">User</option>
              </select>
            </div>
            <!-- Note: For users, terminal info will be updated on first login -->
            <button type="submit" class="btn btn-success">Buat User</button>
          </form>
        </div>
      </div>
      
      <!-- Card: User Terdaftar -->
      <div class="card">
        <div class="card-header">
          User Terdaftar
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="userTable" class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Username</th>
                  <th>Role</th>
                  <th>Terminal</th>
                  <th>Kabupaten</th>
                  <th>Provinsi</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(u) { %>
                  <tr>
                    <td><%= u.id %></td>
                    <td><%= u.username %></td>
                    <td><%= u.role %></td>
                    <td><%= u.terminal_name ? u.terminal_name : '-' %></td>
                    <td><%= u.kabupaten_name ? u.kabupaten_name : '-' %></td>
                    <td><%= u.provinsi_name ? u.provinsi_name : '-' %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
    </div>
  </div>

  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery and DataTables JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#userTable').DataTable({
        responsive: true,
        autoWidth: false,
        language: {
          search: "Cari:",
          lengthMenu: "Tampilkan _MENU_ entri",
          info: "Menampilkan _START_ sampai _END_ dari _TOTAL_ entri",
          infoEmpty: "Tidak ada data",
          paginate: {
            first: "Pertama",
            last: "Terakhir",
            next: "Berikutnya",
            previous: "Sebelumnya"
          }
        }
      });
    });
  </script>
</body>
</html>
